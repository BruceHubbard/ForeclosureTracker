<!DOCTYPE html>
<html>
<head>
  <title>Butler County Sheriff Sale Tracker</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/ui-lightness/jquery-ui.css" %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
		      <div class="container">
		        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		          <span class="icon-bar"></span>
		          <span class="icon-bar"></span>
		          <span class="icon-bar"></span>
		        </a>
		        <a class="brand" href="#">Butler County Sheriff Sale Tracker</a>
				<div class="pull-left">
					<div class="num-matches"></div>
				</div>
				<div class="pull-right">
					<div class="filters">
						<div class="filter toggle show-as">
							<h3>Show As</h3>
							<div class="button-group">
								<input type="radio" id="sa-list" name="showAs" value="list" checked="checked"/><label for="sa-list">List</label>
								<input type="radio" id="sa-map" name="showAs" value="map"/><label for="sa-map">Map</label>
							</div>
						</div>
						<div class="filter toggle show-old">
							<h3>Show Closed?</h3>
							<div class="button-group">
								<input type="radio" id="so1" name="showOld" value="true"/><label for="so1">Yes</label>
								<input type="radio" id="so2" name="showOld" value="false" checked="checked"/><label for="so2">No</label>
							</div>
						</div>
						<div class="filter appraised-range range">
							<h3>Appraised Value</h3>
							<label class="min">0</label>
							<span class="slider"></span>
							<label class="max">500,000</label>
						</div>
					</div>
				</div>
		        <div class="nav-collapse">
		        </div><!-- /.nav-collapse -->
		      </div>
		    </div>	</div>
<%= yield %>

</body>
</html>
